---
// Inline Contact Form with red accents
---

<section class="w-full bg-[#191919] py-16">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">Get Your Bonus Now!</h2>
      <p class="text-[#7A7A7A]">Sign up and start winning today</p>
    </div>

    <form class="contact-form" id="contact-form">
      <!-- Name Field -->
      <div class="form-field">
        <label for="contact-name" class="form-label">
          <span class="text-[#FF3851]">*</span> Your Name
        </label>
        <input
          type="text"
          id="contact-name"
          name="name"
          required
          class="form-input"
          placeholder="Enter your name"
          autocomplete="name"
        />
      </div>

      <!-- Email Field -->
      <div class="form-field">
        <label for="contact-email" class="form-label">
          <span class="text-[#FF3851]">*</span> Your Email
        </label>
        <input
          type="email"
          id="contact-email"
          name="email"
          required
          class="form-input"
          placeholder="Enter your email"
          autocomplete="email"
        />
      </div>

      <!-- Phone Field -->
      <div class="form-field">
        <label for="contact-phone" class="form-label">
          Phone (Optional)
        </label>
        <input
          type="tel"
          id="contact-phone"
          name="phone"
          class="form-input"
          placeholder="Enter your phone number"
          autocomplete="tel"
        />
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="submit-button"
      >
        Play for Free
      </button>
    </form>
  </div>
</section>

<style>
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #CBCBCB;
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    background: #121212;
    border: 1px solid #252525;
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 1rem;
    transition: all 0.2s ease;
    outline: none;
  }

  .form-input::placeholder {
    color: #7A7A7A;
  }

  .form-input:hover {
    border-color: #434343;
  }

  .form-input:focus {
    border-color: #FF3851;
    box-shadow: 0 0 0 3px rgba(255, 56, 81, 0.1);
  }

  .submit-button {
    width: 100%;
    padding: 1rem;
    background: #FF3851;
    color: #FFFFFF;
    border: none;
    border-radius: 9999px;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 0.5rem;
    box-shadow: 0 4px 12px rgba(255, 56, 81, 0.3);
  }

  .submit-button:hover {
    background: #E6324A;
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(255, 56, 81, 0.4);
  }

  .submit-button:active {
    transform: translateY(0);
  }
</style>

<script>
  // Handle contact form submission
  const contactForm = document.getElementById('contact-form');

  contactForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    // Add your form submission logic here
  });
</script>
