---
// SignUpPopup.astro
// Registration modal for new users
---

<div id="signup-modal" class="modal">
  <div class="modal-overlay" id="signup-overlay"></div>
  <div class="modal-content">
    <button type="button" class="modal-close" id="signup-close" aria-label="Close sign up modal">
      ×
    </button>

    <div class="modal-header">
      <h2 class="modal-title">Create Your Account</h2>
      <p class="modal-subtitle">Join FortuneBox and start competing to win big!</p>
    </div>

    <form class="auth-form" id="signup-form">
      <div class="form-group">
        <label for="signup-name" class="form-label">Full Name</label>
        <input
          type="text"
          id="signup-name"
          name="name"
          class="form-input"
          placeholder="John Doe"
          required
          autocomplete="name"
        />
      </div>

      <div class="form-group">
        <label for="signup-email" class="form-label">Email</label>
        <input
          type="email"
          id="signup-email"
          name="email"
          class="form-input"
          placeholder="your@email.com"
          required
          autocomplete="email"
        />
      </div>

      <div class="form-group">
        <label for="signup-password" class="form-label">Password</label>
        <input
          type="password"
          id="signup-password"
          name="password"
          class="form-input"
          placeholder="••••••••"
          required
          autocomplete="new-password"
          minlength="8"
        />
        <p class="form-hint">Must be at least 8 characters</p>
      </div>

      <button type="submit" class="auth-submit-btn">
        Create Account
      </button>
    </form>

    <div class="modal-footer">
      <p class="auth-switch-text">
        Already have an account?
        <a href="#" id="switch-to-signin" class="auth-switch-link">Sign In</a>
      </p>
    </div>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    z-index: 50;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal.active {
    display: flex;
  }

  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .modal-content {
    position: relative;
    background: #191919;
    border: 1px solid #252525;
    border-radius: 16px;
    padding: 2rem;
    max-width: 480px;
    width: 100%;
    z-index: 51;
    animation: modalFadeIn 0.3s ease;
  }

  @keyframes modalFadeIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: transparent;
    border: none;
    color: #CBCBCB;
    font-size: 2rem;
    line-height: 1;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    transition: color 0.2s ease;
  }

  .modal-close:hover {
    color: #FFFFFF;
  }

  .modal-header {
    margin-bottom: 2rem;
  }

  .modal-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #FFFFFF;
    margin: 0 0 0.5rem 0;
  }

  .modal-subtitle {
    font-size: 0.875rem;
    color: #7A7A7A;
    margin: 0;
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #CBCBCB;
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    background: #121212;
    border: 1px solid #252525;
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 1rem;
    transition: all 0.2s ease;
    outline: none;
  }

  .form-input::placeholder {
    color: #7A7A7A;
  }

  .form-input:hover {
    border-color: #434343;
  }

  .form-input:focus {
    border-color: #FF3851;
    box-shadow: 0 0 0 3px rgba(255, 56, 81, 0.1);
  }

  .form-hint {
    font-size: 0.75rem;
    color: #7A7A7A;
    margin: -0.25rem 0 0 0;
  }

  .auth-submit-btn {
    width: 100%;
    padding: 1rem;
    background: #FF3851;
    color: #FFFFFF;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 0.5rem;
  }

  .auth-submit-btn:hover {
    background: #E6324A;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 56, 81, 0.3);
  }

  .auth-submit-btn:active {
    transform: translateY(0);
  }

  .modal-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #252525;
  }

  .auth-switch-text {
    text-align: center;
    font-size: 0.875rem;
    color: #7A7A7A;
    margin: 0;
  }

  .auth-switch-link {
    color: #FF3851;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.2s ease;
  }

  .auth-switch-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .modal-content {
      padding: 1.5rem;
    }

    .modal-title {
      font-size: 1.5rem;
    }
  }
</style>
